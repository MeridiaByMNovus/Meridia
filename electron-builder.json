{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "com.mnovus.meridia",
  "productName": "Meridia",
  "asar": false,
  "extends": null,
  "directories": {
    "output": "dist/"
  },
  "files": [
    "build/**/*",
    "package.json",
    "node_modules/**/*",
    "!**/*.map",
    "!src/**/*"
  ],
  "extraMetadata": "build/main.js",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-${version}.${ext}",
    "category": "Development",
    "executableName": "meridia"
  }
}
